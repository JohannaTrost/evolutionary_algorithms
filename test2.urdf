<?xml version="1.0"?>
<robot name="origins">

  <material name="white">
    <color rgba="1 1 1 1"/>
  </material>

  <link name="base_link">
    <visual>
      <geometry>
        <cylinder length="0.6" radius="0.2"/>
      </geometry>
      <material name="white"/>
    </visual>
  </link>

  <link name="right_leg">
    <visual>
      <geometry>
        <box size="0.6 0.1 0.2"/>
      </geometry>
      <origin rpy="0 1.57075 0" xyz="0 0 -0.3"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.6 0.1 0.2"/>
      </geometry>
      <origin rpy="0 1.57075 0" xyz="0 0 -0.3"/>
    </collision>
  </link>

  <link name="left_leg">
    <visual>
      <geometry>
        <box size="0.6 0.1 0.2"/>
      </geometry>
      <origin rpy="0 1.57075 0" xyz="0 0 -0.3"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.6 0.1 0.2"/>
      </geometry>
      <origin rpy="0 1.57075 0" xyz="0 0 -0.3"/>
    </collision>
  </link>

  <joint name="base_to_right_leg" type="continuous">
    <parent link="base_link"/>
    <child link="right_leg"/>
    <axis xyz="0 1 0"/>
    <origin xyz="0 -0.22 0.25"/>
  </joint>

  <joint name="base_to_left_leg" type="continuous">
    <parent link="base_link"/>
    <child link="left_leg"/>
    <axis xyz="0 1 0"/>
    <origin xyz="0 +0.25 0.25"/>
  </joint>


  <link name="head">
    <visual>
      <geometry>
        <sphere radius="0.3"/>
      </geometry>
      <material name="white"/>
    </visual>
    <collision>
      <geometry>
        <sphere radius="0.3"/>
      </geometry>
    </collision>
  </link>

  <link name="eye1">
    <visual>
      <geometry>
        <sphere radius="0.03"/>
      </geometry>
    </visual>
    <collision>
      <geometry>
        <sphere radius="0.03"/>
      </geometry>
    </collision>
  </link>

  <link name="eye2">
    <visual>
      <geometry>
        <sphere radius="0.03"/>
      </geometry>
    </visual>
    <collision>
      <geometry>
        <sphere radius="0.03"/>
      </geometry>
    </collision>
  </link>

  <joint name="base_to_head" type="continuous">
    <parent link="base_link"/>
    <child link="head"/>
    <axis xyz="0 0 1"/>
    <origin xyz="0 0 -0.6"/>
  </joint>

  <joint name="eye1_to_head" type="fixed">
    <parent link="head"/>
    <child link="eye1"/>
    <origin xyz="0.3 0.1 0"/>
  </joint>
  <joint name="eye2_to_head" type="fixed">
    <parent link="head"/>
    <child link="eye2"/>
    <origin xyz="0.3 -0.1 0 "/>
  </joint>
</robot>
